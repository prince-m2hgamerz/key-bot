{
  "version": 2,
  "builds": [
    { 
      "src": "api/bot.ts", 
      "use": "@vercel/node" 
    }
  ],
  "routes": [
    { 
      "src": "/", 
      "dest": "/index.html" 
    },
    { 
      "src": "/api/bot", 
      "dest": "api/bot.ts" 
    },
    { 
      "src": "/(.*)", 
      "dest": "/$1" 
    }
  ],
  "env": {
    "DATABASE_PATH": "data/db.json" 
  }
}